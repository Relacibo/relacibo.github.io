---
interface Props {
  pos: string;
}
const { pos } = Astro.props;
import { getImage } from "astro:assets";
import roses from '../images/roses.png';
const bg = await getImage({ src: roses, format: 'avif' })
---
<div class=`rose ${pos}` style=`background: url(${bg.src}); background-size: cover;`></div>

<style>
  .rose {
    position: fixed;
    pointer-events: none;
    z-index: 10;
    width: 10rem;
    height: 10rem;
  }

.top-left {
  top: 0;
  left: 0;
  transform: rotate(-90deg);
}

.top-right {
  top: 0;
  right: 0;
}

.bottom-left {
  bottom: 0;
  left: 0;
  transform: rotate(180deg);
}

.bottom-right {
  bottom: 0;
  right: 0;
  transform: rotate(90deg);
}
@media (max-width: 767px) {
  .rose {
    width: 5rem;
    height: 5rem;
    opacity: .5;
  }
}
</style>
